<UserControl x:Class="CSEInverter.ProgressBarWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSEInverter"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid Margin="4" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="label" FontSize="18" Grid.Column="0" Text="TEST" TextAlignment="Left" VerticalAlignment="Center" />
        <ProgressBar Margin="8, 2" x:Name="progressBar" Grid.Column="1" Value="40" />
    </Grid>
</UserControl>
